// C++ code
//
int LDR = 0;

void setup()
{
  pinMode(7, INPUT);
  Serial.begin(9600);
  pinMode(4, OUTPUT);
}

void loop()
{
  LDR = digitalRead(7);
  Serial.println(LDR);
  if (LDR == 0) {
    digitalWrite(4, HIGH);
  } else {
    digitalWrite(4, LOW);
  }
  delay(10); // Delay a little bit to improve simulation performance
}
